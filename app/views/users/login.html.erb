<h3>Login</h3>
<%= form_with scope: :user,url: users_path, action: :create, local: true do |form| %>

  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit %> | <%= link_to 'signup', new_user_path %>
  </p>

<% end %>
